@model IEnumerable<IMS_SI.Models.ReceptionistSchedule>

@{
    ViewBag.Title = "ListOfSchedules";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Receptionist Schedule</li>
        <li class="active">All Receptionist Schedules</li>
    </ol>
</div>

<h2>All Receptionist Schedules</h2>

<p>
    @Html.ActionLink("Add Schedule", "AddReceptionistSchedule", null, new { @class = "btn btn-primary" })
</p>
<table id="table_id" class="table">
    <thead>
        <tr>
            <th>
                Receptionist Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableStartDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableEndDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableStartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableEndTime)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Receptionist.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvailableStartDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvailableEndDay)
                </td>
                <td>
                    @item.AvailableStartTime.ToShortTimeString()
                </td>
                <td>
                    @item.AvailableEndTime.ToShortTimeString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a href="@Url.Action("EditReceptionistSchedule", new {id = item.Id})" class="fa fa-pencil-square-o" style="font-size: 19px"></a> |
                    <a href="@Url.Action("DeleteReceptionistSchedule", new {id = item.Id})" class="fa fa-trash" style="font-size: 19px; color: red"></a>
                </td>
            </tr>
        }
    </tbody>

</table>

